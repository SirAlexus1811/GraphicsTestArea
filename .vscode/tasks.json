{
    "version": "2.0.0",
    "tasks": [{
            "label": "Build All C/C++",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always", //CLI Colors
                "-g", //For Debugger
                "$(find . -name '*.cpp' -o -name '*.c')", //All cpp and c files recursive
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}" //CompiledFileName
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds all .cpp and .c files recursively",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c" //Run command, in /bin/bash, thats why "-c"
                    ]
                }
            }
        },
        {
            "label": "Build All C/C++ with OpenGL Params",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always", //CLI Colors
                "-g", //For Debugger
                "$(find . -name '*.cpp' -o -name '*.c')", //All cpp and c files recursive
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}", //CompiledFileName
                "-lglfw3",//Opengl Params
                "-lGL",
                "-lX11",
                "-lpthread",
                "-lXrandr",
                "-lXi",
                "-ldl"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Builds all .cpp and .c files recursively with OpenGL Params",
            "options": {
                "shell": {
                    "executable": "/bin/bash",
                    "args": [
                        "-c" //Run command, in /bin/bash, thats why "-c"
                    ]
                }
            }
        }
    ]
}